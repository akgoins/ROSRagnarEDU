<?xml version="1.0" ?>
<robot name="ragnar" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="ragnar_upper2" params=" prefix num x y z r p w d1 d2"> 
    
  <link name="${prefix}upper_arm_${num}">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>
    <visual>
      <origin xyz="0 ${d1/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d1}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </collision>
    <collision>
      <origin xyz="0 ${d1/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d1}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </collision>
  </link>

  <joint name="${prefix}joint_${num}" type="floating">
    <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${w}" />
    <parent link="${prefix}base_link2" />
    <child link="${prefix}upper_arm_${num}" />
    <axis xyz="-1.0 0 0" />
    <limit effort="0" lower="-3.1416" upper="3.1416" velocity="2.618"/>
  </joint>

    <!--xacro:include filename="$(find ragnar_support)/urdf/Ragnar_lower_macro.xacro"/>
    <xacro:ragnar_lower prefix=""/-->

  <link name="${prefix}lower_arm_${num}a">
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.57 3.14" />
      <geometry>
        <mesh filename="package://ragnar_support/meshes/ragnar_single_arm2.stl" />
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ragnar_support/meshes/upper_arm_${num}.STL" />
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </collision>
  </link>

  <joint name="${prefix}a${num}_j2a" type="floating">
    <origin xyz="0 ${d1} 0" rpy="0 0 0" />
    <parent link="${prefix}upper_arm_${num}" />
    <child link="${prefix}lower_arm_${num}a" />
  </joint>


  <link name="${prefix}lower_arm_${num}b">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ragnar_support/meshes/ragnar_single_arm2.stl" />
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ragnar_support/meshes/upper_arm_${num}.STL" />
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </collision>
  </link>

  <joint name="${prefix}a${num}_j2b" type="floating">
    <origin xyz="0 ${d1} 0" rpy="0 0 0" />
    <parent link="${prefix}upper_arm_${num}" />
    <child link="${prefix}lower_arm_${num}b" />
  </joint>


  </xacro:macro>
</robot>
