<?xml version="1.0" ?>
<robot name="ragnar" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="ragnar_upper2" params="num x y z r p w d1 d2"> 
    
  <link name="upper_arm_${num}">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>
    <visual>
      <origin xyz="0 ${d1/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d1}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </collision>
    <collision>
      <origin xyz="0 ${d1/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d1}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </collision>
  </link>

  <joint name="a${num}_j1" type="revolute">
    <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${w}" />
    <parent link="base_link2" />
    <child link="upper_arm_${num}" />
    <axis xyz="-1.0 0 0" />
    <limit effort="0" lower="-3.1416" upper="3.1416" velocity="2.618"/>
  </joint>

    <!--xacro:include filename="$(find ragnar_support)/urdf/Ragnar_lower_macro.xacro"/>
    <xacro:ragnar_lower prefix=""/-->

  <link name="lower_arm_${num}_pitch"/>

  <link name="lower_arm_${num}_yaw">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </visual>
    <visual>
      <origin xyz="0 ${d2/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d2}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </visual>
    <visual>
      <origin xyz="0 ${d2} 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.7 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder length="0.1" radius="0.04"/>
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </collision>
    <collision>
      <origin xyz="0 ${d2/2} 0" rpy="1.57 0 0" />
      <geometry>
        <cylinder length="${d2}" radius="0.02"/>
      </geometry>
      <material name="">
        <color rgba="0.75 0.75 0.75 1" />
      </material>
    </collision>
  </link>

  <joint name="a${num}_j2_pitch" type="revolute">
    <origin xyz="0 ${d1} 0" rpy="0 0 0" />
    <parent link="upper_arm_${num}" />
    <child link="lower_arm_${num}_pitch" />
    <axis xyz="-1.0 0 0" />
    <limit effort="0" lower="-3.1416" upper="3.1416" velocity="2.618"/>
  </joint>
  <joint name="a${num}_j2_yaw" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="lower_arm_${num}_pitch" />
    <child link="lower_arm_${num}_yaw" />
    <axis xyz="0 0 1.0" />
    <limit effort="0" lower="-3.1416" upper="3.1416" velocity="2.618"/>
  </joint>


  </xacro:macro>
</robot>
